
@{
    ViewData["Title"] = "ResetPassword";
}
@model ForgetPasswordViewModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="alert alert-info">Şifre yenileme linki e posta adresinize gönderilecektir.</div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success col-md-6 offset-3" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger col-md-6 offset-3" role="alert">
        </div>
 
        <form asp-controller="Home" asp-action="ForgetPassword" method="post">
            <div class="mb-3">
                <label for="Mail" class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
       
 
            <button type="submit" class="btn btn-primary">Şifre Sıfırla</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



