@{
    Layout = null;
}
@model SignInViewModel
<link href="~/css/login.css" rel="stylesheet" />

<div asp-validation-summary="ModelOnly" class="alert alert-danger col-md-6 offset-3" role="alert">
</div>

<div class="login-container">
    <form asp-controller="Home" asp-action="LogIn" method="post" class="form-login">
        <ul class="login-nav">
            <li class="login-nav__item active">
                <a href="#">Kullanıcı Giriş Ekranı</a>
            </li>
        </ul>

        <label for="Mail" class="login__label" asp-for="Email"></label>
        <input asp-for="Email" class="login__input">
        <span asp-validation-for="Email" class="text-danger" style="color:wheat"></span>

        <label for="Password" class="login__label" asp-for="Password"></label>
        <input asp-for="Password" class="login__input">
        <span asp-validation-for="Password" class="text-danger" style="color:wheat"></span>

        <label for="login-sign-up" class="login__label--checkbox">
            <input type="checkbox" class="login__input--checkbox" asp-for="RememberMe">
            Beni Hatırla
        </label>

        <button type="submit" class="login__submit">Giriş</button>
    </form>
    <a asp-controller="Home" asp-action="ForgetPassword" class="login__forgot">Şifremi Unuttum</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
